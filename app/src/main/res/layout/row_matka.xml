<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rel_matka"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73pt"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_home">

        <LinearLayout
            android:id="@+id/lin_main"
            android:layout_width="match_parent"
            android:layout_height="54pt"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_matkaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rLayoutBidsTime"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="MORNING KUBER"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/linMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/rLayoutBidsTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matka_txt_open_bid_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BIDS OPEN-"
                            android:textColor="@color/white"
                            android:textSize="7pt" />

                        <TextView
                            android:id="@+id/tv_openTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@id/matka_txt_open_bid_Time"
                            android:paddingLeft="2dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="7pt" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="2.5dp"
                            android:layout_marginBottom="2.5dp"
                            android:background="@color/white"
                            android:padding="2dp"
                            android:textColor="@color/colorPrimary"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matka_txt_close_bid_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/tv_closeTime"
                            android:text="BIDS Close -"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="7pt" />

                        <TextView
                            android:id="@+id/tv_closeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:paddingLeft="2dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="7pt" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_sNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***"
                        android:textColor="@color/white"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/matka_dess1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_sNum"
                        android:paddingLeft="2dp"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/matka_res_Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/matka_dess1"
                        android:text="578"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/matka_dess2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/matka_res_Number"
                        android:paddingLeft="2dp"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextClock
                        android:id="@+id/matka_end_Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/matka_dess2"
                        android:text="578"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/matka_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/matka_end_Number"
                        android:text="578"
                        android:textColor="@color/colorPrimary"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_loader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Loading..."
                    android:textColor="#316D35"
                    android:textSize="16dp"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_bidStatus"
            android:layout_width="match_parent"
            android:layout_height="19pt"
            android:layout_below="@id/lin_main"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_bottom_round_20pd"
            android:gravity="center"
            android:padding="7dp"
            android:text="Bidding is Running For Today"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_pause"
        android:layout_width="2dp"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".3">
        <ImageView

            android:visibility="gone"
            android:id="@+id/matka_image"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_centerInParent="true"
            android:src="@drawable/playbutton" />

    </RelativeLayout>
</RelativeLayout>